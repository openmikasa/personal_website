---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  date?: string;
  image?: string;
}

const { title, description, date, image } = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <div class="max-w-4xl mx-auto px-6 py-12">
    <article class="blog-content">
      <slot />
    </article>

    <!-- Contact Section -->
    <div class="contact-section">
      <div class="contact-divider"></div>
      <p class="contact-text">
        Have thoughts on this? <a href="/contact" class="contact-link">Get in touch</a>
      </p>
    </div>
  </div>
</BaseLayout>

<style is:global>
  /* Override lowercase transformation for blog content */
  .blog-content,
  .blog-content * {
    text-transform: none !important;
  }

  /* Blog-specific typography styles */
  .blog-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .blog-content .blog-date {
    color: var(--color-text-secondary);
    font-size: 1rem;
    margin-bottom: 2rem;
    display: block;
  }

  .blog-content p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  .blog-content a {
    color: var(--color-link);
    text-decoration: underline;
  }

  .blog-content a:hover {
    color: var(--color-warm-accent);
  }

  .blog-content strong {
    color: var(--color-text);
    font-weight: 600;
  }

  .contact-section {
    margin-top: 4rem;
    padding-top: 2rem;
  }

  .contact-divider {
    height: 1px;
    background-color: var(--color-border);
    margin-bottom: 2rem;
  }

  .contact-text {
    color: var(--color-text-secondary);
    font-size: 1rem;
    text-align: center;
  }

  .contact-link {
    color: var(--color-link);
    text-decoration: underline;
  }

  .contact-link:hover {
    color: var(--color-warm-accent);
  }
</style>
