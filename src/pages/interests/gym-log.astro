    <section class="max-w-2xl">
      <div class="prose prose-lg max-w-none">

        <h2 class="text-2xl font-semibold mb-4" style="color: var(--color-text);">Best Performance</h2>
        <p class="text-lg mb-6" style="color: var(--color-text-secondary);">
          [Content to Be Added]
        </p>

        <h2 class="text-2xl font-semibold mb-4" style="color: var(--color-text);">Current Training</h2>
        <p class="text-lg mb-6" style="color: var(--color-text-secondary);">
          [Content to Be Added]
        </p>

        <h2 class="text-2xl font-semibold mb-4" style="color: var(--color-text);">Table of Past Trainings</h2>
        <p class="text-lg" style="color: var(--color-text-secondary);">
