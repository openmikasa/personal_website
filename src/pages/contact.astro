---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout
  title="Contact - Ramy Ghorayeb"
  description="Get in Touch with Me"
>
  <div class="fade-in">
    <!-- Page Title -->
    <h1 class="text-4xl md:text-5xl font-bold mb-12">Get in Touch</h1>

    <!-- Contact Form -->
    <section class="mb-16 max-w-2xl">
      <p class="text-lg mb-8 text-secondary">
        Wanna Say Hi? You Can Reach Out to Me on LinkedIn <a href="https://linkedin.com/in/ramyg" target="_blank" rel="noopener noreferrer" class="hover:underline text-link">@ramyg</a> or Through the Form Below.
      </p>

      <form
        action="https://formspree.io/f/mwvljpgj"
        method="POST"
        class="space-y-6"
      >
        <!-- Honeypot field for spam protection -->
        <input type="text" name="_gotcha" style="display:none" />

        <!-- Name Field -->
        <div>
          <label
            for="name"
            class="block text-sm font-medium mb-2 text-secondary"
          >
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 border rounded-lg focus:outline-none form-input"
            placeholder="Your Name"
          />
        </div>

        <!-- Email Field -->
        <div>
          <label
            for="email"
            class="block text-sm font-medium mb-2 text-secondary"
          >
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 border rounded-lg focus:outline-none form-input"
            placeholder="Your.Email@Example.Com"
          />
        </div>

        <!-- Message Field -->
        <div>
          <label
            for="message"
            class="block text-sm font-medium mb-2 text-secondary"
          >
            Message
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows="6"
            class="w-full px-4 py-3 border rounded-lg focus:outline-none resize-none form-input"
            placeholder="Your Message..."
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          id="submit-button"
          class="w-full text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 bg-[var(--color-accent)] shadow-[var(--shadow-sm)]"
        >
          Send Message
        </button>
      </form>

      <script>
        const submitButton = document.getElementById('submit-button');
        if (submitButton) {
          submitButton.addEventListener('mouseenter', () => {
            submitButton.style.backgroundColor = 'var(--color-text)';
            submitButton.style.color = 'var(--color-bg)';
            submitButton.style.transform = 'translateY(-2px)';
            submitButton.style.boxShadow = 'var(--shadow-md)';
          });

          submitButton.addEventListener('mouseleave', () => {
            submitButton.style.backgroundColor = 'var(--color-accent)';
            submitButton.style.color = 'white';
            submitButton.style.transform = 'translateY(0)';
            submitButton.style.boxShadow = 'var(--shadow-sm)';
          });
        }
      </script>
    </section>
  </div>
</PageLayout>
