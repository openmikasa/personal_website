---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout
  title="Your Name - Portfolio"
  description="Personal portfolio showcasing projects and skills"
>
  <div class="fade-in">
    <!-- Hero Section -->
    <section class="text-center py-16 md:py-24">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        Hi! I'm Ramy Ghorayeb
      </h1>

      <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-2xl mx-auto">
        I'm a Product Manager currently living between New York & Paris.
      </p>

      <!-- CTA Button -->
      <a
        href="/interests"
        class="inline-block bg-black text-white px-8 py-3 rounded-lg font-medium hover:bg-gray-800 transition-all duration-200 hover:shadow-lg no-underline"
      >
        Explore My Interests
      </a>
    </section>
  </div>
</PageLayout>
